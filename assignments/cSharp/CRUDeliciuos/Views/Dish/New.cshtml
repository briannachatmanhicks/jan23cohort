@model Dish


<div class="container w-75 mx-auto" >
    <h2 class="text-center">New Dish</h2>
    <form class= "shadow p-3 rounded" asp-action="AddNewDish" asp-controller="Dish" method="POST">

        <div class="mb-3">
            <label asp-for="DishName">Dish Name</label>
            <input asp-for="DishName" class="form-control">
            <span asp-validation-for="DishName" class="text-danger font-weight-bold"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChefName"></label>
            <input asp-for="ChefName" class="form-control">
            <span asp-validation-for="ChefName" class="text-danger font-weight-bold"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Calories"></label>
            <input type="number" asp-for="Calories" class="form-control">
            <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tastiness"></label>
            <select type="number" asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>


        <button class="btn btn-success">Add Dish</button>
    </form>
</div>