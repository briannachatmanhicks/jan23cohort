@model Dish
<h3 class="text-center">Add a Dish</h3>
<hr>

<form asp-controller="" asp-action="" method="POST">
    <div class="mb-3">
        <label asp-for="DishName"></label>
        <span
            asp-validation-for="DishName"
            class="text-danger font-weight-bold"
        ></span>
        <input asp-for="DishName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Calories"></label>
        <span
            asp-validation-for="Calories"
            class="text-danger font-weight-bold"
        ></span>
        <input asp-for="Calories" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Tastiness"></label>
        <span
            asp-validation-for="Tastiness"
            class="text-danger font-weight-bold"
        ></span>
        <select asp-for="Tastiness" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>

